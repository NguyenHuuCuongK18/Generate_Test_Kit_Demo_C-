<Window x:Class="UITestKit.MainDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Kit Manager" Height="800" Width="1400"
        WindowState="Maximized"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Configuration Bar -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Top Configuration Bar -->
        <Border Grid.Row="0" Background="#34495E" BorderBrush="#2C3E50" BorderThickness="0,0,0,2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnConfigure" Content="⚙️ Configure Settings" 
                            Background="#E67E22" Foreground="White" 
                            Padding="15,8" Margin="0,0,10,0" Click="BtnConfigure_Click"
                            BorderThickness="0" Cursor="Hand" FontWeight="Bold"/>

                    <Border Background="#2C3E50" CornerRadius="3" Padding="10,5" Margin="5,0">
                        <TextBlock x:Name="TxtConfigStatus" Text="⚠️ Not Configured" 
                                   Foreground="#E74C3C" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Protocol: " Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TxtProtocol" Text="N/A" Foreground="#3498DB" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#2C3E50" BorderBrush="#34495E" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#1C2833" Padding="10">
                        <TextBlock Text="PROJECT EXPLORER" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </Border>

                    <!-- TreeView for Folders -->
                    <TreeView Grid.Row="1" x:Name="FolderTreeView" Background="#2C3E50" 
                              Foreground="White" BorderThickness="0" Padding="5">
                        <TreeView.Resources>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Margin" Value="0,2,0,2"/>
                            </Style>
                        </TreeView.Resources>
                    </TreeView>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Margin="10">
                        <Button x:Name="BtnNewTestKit" Content="+ New Test Case" 
                                Background="#27AE60" Foreground="White" 
                                Padding="10,8" Margin="0,0,0,5" Click="BtnNewTestKit_Click"
                                BorderThickness="0" Cursor="Hand" IsEnabled="False"/>
                        <Button x:Name="BtnOpenFolder" Content="📁 Open Folder" 
                                Background="#3498DB" Foreground="White" 
                                Padding="10,8" Click="BtnOpenFolder_Click"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#34495E"/>

            <!-- Tab Container for RecorderWindows -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tab Header -->
                <Border Grid.Row="0" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="TabHeaderPanel" Orientation="Horizontal" Height="40"/>
                    </ScrollViewer>
                </Border>

                <!-- Tab Content Area -->
                <Grid Grid.Row="1" x:Name="TabContentArea" Background="White">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="PlaceholderPanel">
                        <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#BDC3C7"/>
                        <TextBlock Text="Configure Settings First" 
                                   HorizontalAlignment="Center"
                                   Foreground="Gray" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock Text="Click 'Configure Settings' button to set up paths and protocol" 
                                   HorizontalAlignment="Center"
                                   Foreground="Gray" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer - Log Panel -->
        <Border Grid.Row="2" Background="#1C2833" BorderBrush="#34495E" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Border Grid.Row="0" Background="#17202A" Padding="10,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋 LOG VIEWER" Foreground="White" FontWeight="Bold" FontSize="12"/>
                        <Button Content="Clear" Margin="15,0,0,0" Padding="8,2" 
                                x:Name="BtnClearLog" Click="BtnClearLog_Click"
                                BorderThickness="0" Cursor="Hand"/>
                    </StackPanel>
                </Border>

                <!-- Log Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" 
                             Background="#1C2833" Foreground="#ECF0F1" 
                             BorderThickness="0" IsReadOnly="True" 
                             TextWrapping="Wrap" Padding="10"
                             FontFamily="Consolas" FontSize="11"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>