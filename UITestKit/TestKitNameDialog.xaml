<Window x:Class="UITestKit.TestKitNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Test Kit" Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#ECF0F1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Create New Test Kit" 
                   FontSize="18" FontWeight="Bold"
                   Foreground="#2C3E50" Margin="0,0,0,15"/>

        <!-- Project Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Project:" FontWeight="SemiBold" Foreground="#34495E"/>
            <TextBlock x:Name="TxtProjectName" Text="Project Name" 
                       Foreground="#7F8C8D" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Test Kit Name Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Test Kit Name:" FontWeight="SemiBold" Foreground="#34495E"/>
            <TextBox x:Name="TxtTestKitName" 
                     Padding="8" Margin="0,5,0,0"
                     FontSize="14"
                     BorderBrush="#BDC3C7" BorderThickness="2"/>
            <TextBlock x:Name="TxtValidation" 
                       Foreground="Red" FontSize="11"
                       Margin="0,5,0,0" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Folder Preview -->
        <GroupBox Grid.Row="3" Header="Folder Path Preview" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TxtFolderPreview" 
                           TextWrapping="Wrap" 
                           Foreground="#7F8C8D"
                           FontFamily="Consolas"
                           FontSize="11"
                           Padding="5"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Create" Width="100" Height="32"
                    Background="#27AE60" Foreground="White"
                    BorderThickness="0" Cursor="Hand"
                    FontWeight="Bold"
                    Click="BtnCreate_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="100" Height="32"
                    Background="#95A5A6" Foreground="White"
                    BorderThickness="0" Cursor="Hand"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>