<Window x:Class="UITestKit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Config Input" Height="480" Width="550"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Client Path -->
            <RowDefinition Height="Auto"/>
            <!-- Server Path -->
            <RowDefinition Height="Auto"/>
            <!-- Save Location -->
            <RowDefinition Height="Auto"/>
            <!-- Client AppSettings -->
            <RowDefinition Height="Auto"/>
            <!-- Server AppSettings -->
            <RowDefinition Height="Auto"/>
            <!-- Protocol Selection -->
            <RowDefinition Height="Auto"/>
            <!-- Project Name -->
            <RowDefinition Height="*"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Client Path -->
        <TextBlock Text="Client Path:" Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtClientPath" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="0" Grid.Column="2" Margin="5" Click="BtnBrowseClient_Click"/>

        <!-- Server Path -->
        <TextBlock Text="Server Path:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtServerPath" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="1" Grid.Column="2" Margin="5" Click="BtnBrowseServer_Click"/>

        <!-- Save Location -->
        <TextBlock Text="Save Location:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtSaveLocation" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="2" Grid.Column="2" Margin="5" Click="BtnBrowseSave_Click"/>

        <!-- Client AppSettings -->
        <TextBlock Text="Client AppSettings:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtClientAppSettings" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="3" Grid.Column="2" Margin="5" Click="BtnBrowseClientAppSettings_Click"/>

        <!-- Server AppSettings -->
        <TextBlock Text="Server AppSettings:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtServerAppSettings" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="4" Grid.Column="2" Margin="5" Click="BtnBrowseServerAppSettings_Click"/>

        <!-- Protocol Selection -->
        <TextBlock Text="Protocol Type:" Grid.Row="5" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <ComboBox x:Name="cbProtocol" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="TCP"/>
                    <ComboBoxItem Content="HTTP"/>
                </ComboBox>
            </StackPanel>

        </StackPanel>

        <!-- Project Name -->
        <TextBlock Text="Project Name:" Grid.Row="6" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="txtProjectName" Grid.Row="6" Grid.Column="1" Margin="5" Grid.ColumnSpan="2"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="100" Margin="5" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
