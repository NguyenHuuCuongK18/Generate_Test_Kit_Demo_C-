<Window x:Class="UITestKit.ClientConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client Console" Height="300" Width="730">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="txtClientInput" Width="350" Margin="0,0,5,0"/>
            <Button Content="Send Input" Width="100" Click="BtnSendInput_Click"/>
            <Button Content="End Client" Width="100" Margin="5,0,0,0" Click="BtnEndClient_Click"/>

            <Button Content="Start Client Again" Width="120" Margin="5,0,0,0" Click="BtnStartClientAgain_Click"/>

        </StackPanel>
        <TextBox x:Name="txtOutput" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>